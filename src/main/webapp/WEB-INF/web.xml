<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>controllers.filters.AuthentificationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/driver/*</url-pattern>
        <url-pattern>/driver</url-pattern>
        <url-pattern>/client/*</url-pattern>
        <url-pattern>/client</url-pattern>
    </filter-mapping>

    
    
    <filter>
        <filter-name>CheckRoleAdminFilter</filter-name>
        <filter-class>controllers.filters.CheckRoleAdminFilter</filter-class>

    </filter>
    <filter-mapping>
        <filter-name>CheckRoleAdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>CheckRoleDriverFilter</filter-name>
        <filter-class>controllers.filters.CheckRoleDriverFilter</filter-class>

    </filter>
    <filter-mapping>
        <filter-name>CheckRoleDriverFilter</filter-name>
        <url-pattern>/driver/*</url-pattern>
        <url-pattern>/driver</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>CheckRoleClientFilter</filter-name>
        <filter-class>controllers.filters.CheckRoleClientFilter</filter-class>

    </filter>
    <filter-mapping>
        <filter-name>CheckRoleClientFilter</filter-name>
        <url-pattern>/client/*</url-pattern>
        <url-pattern>/client</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <context-param>
        <param-name>PARAMETER_ENCODING</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

